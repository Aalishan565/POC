<?xml version="1.0" encoding="utf-8"?><!--Credit card detail container-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_rounded_corner"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_view_pager_cnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_rounded_corner"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_lbl_visa_credit_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_layout_dimen_15"
            android:layout_marginTop="@dimen/common_layout_dimen_35"
            android:text="Visa Credit Card"
            android:textColor="#808080"
            android:textSize="@dimen/text_size_16px" />

        <TextView
            android:id="@+id/tv_credit_card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_lbl_visa_credit_card"
            android:layout_marginLeft="@dimen/common_layout_dimen_15"
            android:layout_marginTop="@dimen/common_layout_dimen_20"
            android:text="XXXX-XXXX-XXXX-1234"
            android:textColor="#808080"
            android:textSize="@dimen/text_size_18px"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_layout_dimen_20"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/tv_lbl_expiration_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_layout_dimen_15"
                android:layout_marginTop="@dimen/common_layout_dimen_20"
                android:layout_weight="3"
                android:text="Expiration\nDate"
                android:textColor="#808080"
                android:textSize="@dimen/text_size_15px" />

            <TextView
                android:id="@+id/tv_expiration_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/common_layout_dimen_15"
                android:layout_marginTop="@dimen/common_layout_dimen_20"
                android:layout_weight="3"
                android:text="12/12"
                android:textColor="#808080"
                android:textSize="@dimen/text_size_16px"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_credit_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/common_layout_dimen_15"
                android:layout_weight="4"
                android:src="@drawable/visa" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_card_selected"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="@dimen/common_layout_dimen_15"
            android:src="@drawable/tick" />
        </LinearLayout>
</FrameLayout>